
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Registrations</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Registration</h2>
            <span class="text-light">Use the below form to update details of your registration</span>
        </div>

         <!-- form handling -->
 <form method="POST" id="update_registration">
    <div class="new_registration">
        <div class="form-group">
            <label for="brandName" class="text-light">Brand Name</label>
            <input type="hidden" name="id" value="<%= registrations._id %>">
            <input type="text" name="brandName" value="<%= registrations.brandName %>" placeholder="Investr">
        </div>
        <div class="form-group">
            <label for="productName" class="text-light">Product Name</label>
            <input type="text" name="productName" value="<%= registrations.productName%>" placeholder="ABC">
        </div>
        <div class="form-group">
            <label for="aboutBrand" class="text-light">About Brand</label>
            <input type="text" name="aboutBrand" value="<%= registrations.aboutBrand%>" placeholder="Description ..">
        </div>
        <div class="form-group">
            <label for="aboutProduct" class="text-light">About Product</label>
            <input type="text" name="aboutProduct" value="<%= registrations.aboutProduct%>" placeholder="Description ..">
        </div>

        <div class="form-group">
            <label for="productType" class="text-light">Product Type</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="productType" value="Consumable" <%= registrations.productType == 'Consumable' ? 'checked' : '' %> >
                <label for="radio-2" class="radio-label">Consumable</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="productType" value="Non-Consumable" <%= registrations.productType == 'Non-Consumable' ? 'checked' : '' %> >
                <label for="radio-3" class="radio-label">Non-Consumable</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
